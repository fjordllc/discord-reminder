<%= form_with model: channel, local: true, html: { name: 'channel' } do |form| %>
  <%= render 'errors', object: channel %>
  <div class="field">
    <div class="label">
      <%= form.label :name %>
    </div>
    <div class="control">
      <%= form.text_field :name, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <div class="label">
      <%= form.label :webhook_url %>
    </div>
    <div class="control">
      <%= form.text_area :webhook_url, class: 'input'  %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit 'Submit', class: 'button is-link' %>
    </div>
  </div>
<% end %>
